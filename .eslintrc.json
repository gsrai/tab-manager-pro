{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "chrome": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "arrow-spacing": "error",
    "block-spacing": "error",
    "no-template-curly-in-string": "error",
    "no-implicit-coercion": "error",
    "curly": "error",
    "default-case": "warn",
    "no-console": "warn",
    "no-debugger": "warn",
    "no-else-return": "error",
    "no-extra-bind": "error",
    "no-trailing-spaces": "warn",
    "no-undef-init": "error",
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-var": 1,
    "object-shorthand": ["warn", "properties"],
    "prefer-const": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "ignore"
    }],
    "spaced-comment": 1,
    "strict": "error"
  }
}